@model IEnumerable<EmployeeViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>


@* <div class="alert alert-danger">
    <p> @ViewData["Data01"]</p>
</div>

<div class="alert alert-success">
    <p> @ViewBag.Data02]</p>
</div> *@
<br />

<form asp-action="Index" >
    
   <div class="row"> 
       <div class="col-8">
            <input type="text" name="inputSearch" class="form-control" />

       </div>
       <div class="col-4">
            <input type="submit" name="Search" class="btn btn-success" />

       </div>
   </div>

</form>

<br />
<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Employee</a>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <th>Image</th>
        <th>Name</th>
        <th>Age</th>
        <th>Phone Number</th>
        <th>E-Mail</th>
        <th>Salary</th>
        <th>Is Active</th>
        <th>Adress</th>
        <th>Hire Date</th>
        <th>Work for</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>

                        <img src="/Files/Images/@item.ImageName" width="80" class="img-fluid rounded-circle" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a href="mailto:@item.Email">@item.Email</a>
                    </td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.Address</td>
                    <td>@item.HireDate</td>
                    <td>@item.workfor?.Name</td>

                    <partial name="_ButtonPartialView" model="item.Id.ToString()" />


                </tr>

            }

        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are no Employees</h4>
    </div>

}