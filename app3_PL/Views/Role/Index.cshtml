<div class="alert alert-success">
    <p> @ViewBag.Data02]</p>
</div> *@
<br />

<br />
<a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

<form asp-action="Index">

    <div class="row">
        <div class="col-8">
            <input type="text" name="inputSearch" class="form-control" />

        </div>
        <div class="col-4">
            <input type="submit" name="Search" class="btn btn-success" />

        </div>
    </div>

</form>

<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(u=>u.Id)</th>
        <th>@Html.DisplayNameFor(u=>u.Name)</th>
    
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <partial name="_ButtonPartialView" model="@item.Id" />


                </tr>

            }

        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are no roles</h4>
    </div>

}

