@model IEnumerable<UserViewModel>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>


@* <div class="alert alert-danger">
    <p> @ViewData["Data01"]</p>
</div>

<div class="alert alert-success">
    <p> @ViewBag.Data02]</p>
</div> *@
<br />

<form asp-action="Index">

    <div class="row">
        <div class="col-8">
            <input type="text" name="inputSearch" class="form-control" />

        </div>
        <div class="col-4">
            <input type="submit" name="Search" class="btn btn-success" />

        </div>
    </div>

</form>

<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
        <th>@Html.DisplayNameFor(u=>u.Id)</th>
        <th>@Html.DisplayNameFor(u=>u.FirstName)</th>
        <th>@Html.DisplayNameFor(u=>u.LastName)</th>
        <th>@Html.DisplayNameFor(u=>u.Email)</th>
        <th>@Html.DisplayNameFor(u=>u.Roles)</th>
        <th>Details</th>
        <th>Update</th>
        <th>Delete</th>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {

                <tr>

                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>
                        <a href="mailto:@item.Email">@item.Email</a>
                    </td>
                    <td>@string.Join(" ",item.Roles)</td>

                    <partial name="_ButtonPartialView" model="item.Id" />


                </tr>

            }

        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are no users</h4>
    </div>

}

